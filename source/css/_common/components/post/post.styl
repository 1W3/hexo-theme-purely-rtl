/* 内容区markdown */
.post-content {
	line-height:150%;
	margin:10px 0;

	// 代码高亮
	figure {
		margin: 0;
	}

	pre,code {
		padding:2px 4px;
		background:#F3F3F0;
		font-family:Menlo,Monaco,Consolas,"Lucida Console","Courier New",monospace;
		font-size:.92857em;
	}
	code {
		color:#B94A48;
	}
	pre {
		padding:8px;
		overflow:auto;
		max-height:300px;
	}
	pre code {
		color:#444;
	}


	// Markdown 样式
	blockquote {
		margin:1em 0;
		margin-left:1.5em;
		padding-left:1em;
		border-left:1px solid #C10D0C;
	}

	ul {
		padding:.5em 2em!important;
		list-style-type: square;
	}

	ol {
		padding:.5em 2em!important;
	}
	
	dl {}

	dt {
		font-weight: bold;
	}

	dd {}


  // 图片样式
	img {
		max-width:618px;
		border:1px solid rgb(224,224,224);
		padding:2px;

		&:hover {
			border-color: #C10D0C;
		}
	}

}