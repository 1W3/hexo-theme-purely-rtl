@import "post-meta"

/* Structure */
.post {
	padding-bottom:20px;
	border-left:1px solid #DDD;
	font-size:14px;
	line-height:140%;


	a {color: #333;}

	h1 {
		margin: 0;
		padding: 20px 0 20px 20px;
		border-bottom: 1px solid #DDD;
		line-height: 1.25;
	}

	&:hover {
		color: #222;
		border-color: #FF0000;

		& a {color: #222;}

		h1 {border-color: #FF0000;}
	}

}


/* 内容区markdown */
.post-content {
	line-height:150%;
	margin:10px 0;

	// 代码高亮
	figure {margin: 0;}

	pre,code {
		padding:2px 4px;
		background:#F3F3F0;
		font-family:Menlo,Monaco,Consolas,"Lucida Console","Courier New",monospace;
		font-size:.92857em;
	}

	code {color:#B94A48;}

	pre {
		padding:8px;
		overflow:auto;
		max-height:300px;

		code {color: #444;}
	}


	// Markdown 样式
	blockquote {
		margin:1em 0;
		margin-left:1.5em;
		padding-left:1em;
		border-left:1px solid #C10D0C;
	}

	ul {
		padding:.5em 2em!important;
		list-style-type: square;
	}

	ol {
		padding:.5em 2em!important;
	}

	// 图片样式
	img {
		border:1px solid rgb(224,224,224);
		padding:2px;

		&:hover {
			border-color: #C10D0C;
		}
	}


	// 待添加样式
	// dl {}

	// dt {
	// 	font-weight: bold;
	// }

	// dd {}

}


/* PoContent */
.pocontent {
	padding: 20px 0 0 20px;
	figure.highlight {
		margin-left: 0;
	}
}