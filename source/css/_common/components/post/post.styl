@import "post-meta"

/* Structure */
.post {
	padding-bottom:20px;
	border-left:1px solid #DDD;
	font-size:14px;
	line-height:140%;


	a {color: #333;}

	h1 {
		margin: 0;
		padding: 20px 0 20px 20px;
		border-bottom: 1px solid #DDD;
		line-height: 1.25;
	}

	&:hover {
		color: #222;
		border-color: #C10D0C;

		& a {color: #222;}

		h1 {border-color: #C10D0C;}
	}

}


/* 内容区markdown */
.post-content {
	font-size: 16px;
	font-family: -apple-system,SF UI Text,Arial,PingFang SC,Hiragino Sans GB,Microsoft YaHei,WenQuanYi Micro Hei,sans-serif;
	text-align: justify;
	line-height: 1.7;

	// 代码高亮
	figure {margin: 0;}

	code {
		padding: 2px 4px;
		background: #EEE;
		font-family: Menlo,Monaco,Consolas,Courier New,monospace;
		font-size: 12px;
	}

	pre {
		padding: 10px;
		overflow: auto;
		background: #EEE;

		code {
			padding: 0;
		}
	}


	// 标签
	blockquote {
		margin: 1em 0;
		padding: 1em 2em;
		border-left: 1px solid #cecece;
	}

	hr {
		margin: 40px 0;
		height: 1px;
		background: #ccc;
		border: none;
	}

	img {
		display: block;
		margin: 0 auto;
		padding: 5px;
		border: 1px solid #CCC;

		&:hover {
			border-color: #C10D0C;
		}
	}

}


/* PoContent */
.pocontent {
	padding: 20px 0 0 20px;
	figure.highlight {
		margin-left: 0;
	}
}



// post 详情页

.post-detail {
	.post-meta {
		margin: 0;
		padding: 0;

	}

}