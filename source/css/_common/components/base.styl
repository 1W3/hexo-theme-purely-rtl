/* 全局 */

.clearfix {
	zoom:1;
}
.clearfix:before,.clearfix:after {
	content:" ";
	display:table;
}
.clearfix:after {
	clear:both;
}
a {
	color:#333;
	text-decoration:none;
	outline:none;
}
a:hover,a:active {
	color:#C10D0C;
}
a:focus {
	outline:none;
}


img {
	border:0;
}
@font-face {
	font-family:'Electrolize';
	font-style:normal;
	font-weight:400;
	src:local('Electrolize'),local('Electrolize-Regular'),url(http://rainy.qiniudn.com/Electrolize.woff) format('woff');
}




/* 内容区结束 */

/* 结构 */
body {
	color:#333;
	background:#F1F1F1;
	font:normal 14px "TIBch","Classic Grotesque W01","Helvetica Neue",Arial,"Hiragino Sans GB","STHeiti","Microsoft YaHei","WenQuanYi Micro Hei",SimSun,sans-serif;
	-webkit-font-smoothing:antialiased;
}
#wrapper {
	width:900px;
	margin:80px auto;
	padding:0;
	border:1px solid #DDD;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	background:#FFF;
	overflow:hidden;
}
#header {
	padding:50px 50px 0;
	text-shadow:1px 1px 5px #D3D3D3;
}
#logo {
	font:normal 50px 'Electrolize',Verdana;

	&:hover {
		color:#C10D0C;
	}
}
.description {
	font-size:14px;
	line-height:28px;
	margin:5px 0;
}
#nav-menu {
	width:100%;
	height:38px;
	border-bottom:1px solid #E0E0E0;
	float:left;
}
#nav-menu ul,#nav-menu li {
	list-style:none;
	float:left;
	margin: 0;
	padding: 0;
}
#nav-menu a {
	color:#333;
	display:block;
	height:16px;
	margin-right:30px;
	padding:10px;
	font-size:14px;

	&:hover, &:current {
		border-bottom:2px solid #FF0000;
	}
}

#search {
	float:right;
	padding-top:18px;
}
#search input {
	width:80px;
	height:20px;
	padding:0;
	border:0;
	border-bottom:2px solid #FFFFFF;
	outline:none;
	color:#4B4B4B;
}
#search input:focus {
	border-bottom-color:#FF0000;
	width:130px;
}
#main {
	margin-top:20px;
	padding:0 20px;
}
#main h2.archive-title {
	display:block;
}
#main h2.post-title {
	display:block;
}
.post {
	width: 629px;
	padding-bottom:10px;
	border-left:1px solid #DDD;
	font-size:14px;
	line-height:140%;

	&:hover {
		color: #222;
		border-color: #FF0000;

		& a {
			color: #222;
		}
	}

	a {
		color: #333;
	}

	h3 {
		color:#C10D0C;
		display:block;
		padding:3px 0 3px 8px;
		border-bottom:1px solid #DDD;
		font-size:16px;
		font-weight:normal;

		&::first-child {
			border-color: #FF0000;
		}
	}

}


.post-meta {
	color:rgb(0,0,0);
	list-style:none;
	border-bottom:1px #ccc dotted;
}
.post-meta li {
	display:inline-block;
	margin:5px 20px 5px 0;
}
.pocontent {
	margin-top:5px;
	padding-left:8px;

	figure.highlight {
		margin-left: 0;
	}
}

.page-navigator {
	color:#666;
	margin-top:20px;
	border-top:1px solid #E0E0E0;
	list-style:none;
	font-size:16px;

	li {
		display:inline-block;
		margin:0 5px 5px 0;
	}

	a {
	  display:inline-block;
		height:20px;
		border-top:2px solid #FFFFFF;
		padding:5px 9px;
		line-height:20px;

		&:hover {
			border-color: #FF0000;
		}
	}

	.current a {
		color:#444;
		border-top-color:#FF0000;
	}


}







// 页脚
#footer {
	position:relative;
	padding:20px 0 15px;
	text-shadow:1px 1px 5px #D3D3D3;
}


// 页面容器
.container {
	margin:0;
	padding:0 20px;
}


// 返回顶部
#toTop {
	bottom:5px;
	right:5px;
	font:normal 30px 'Electrolize',Verdana;
	position:absolute;
}