// 外链字体
@import url('https://fonts.googleapis.com/css?family=Electrolize');


/* 全局 */
.clearfix {
	zoom:1;
}
.clearfix:before,.clearfix:after {
	content:" ";
	display:table;
}
.clearfix:after {
	clear:both;
}
a {
	color:#333;
	text-decoration:none;
	outline:none;

	&:hover,
	&:active {
		color: #C10D0C;
	}

	&:focus {
		outline: none;
	}
}

img {
	border:0;
}


/* 结构 */
body {
	color:#333;
	background:#F1F1F1;
	font:normal 14px "TIBch","Classic Grotesque W01","Helvetica Neue",Arial,"Hiragino Sans GB","STHeiti","Microsoft YaHei","WenQuanYi Micro Hei",SimSun,sans-serif;
	-webkit-font-smoothing:antialiased;
}
#wrapper {
	width:900px;
	margin:80px auto;
	padding:0;
	border:1px solid #DDD;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	background:#FFF;
	overflow:hidden;
}

#main {
	padding:50px 50px 0;
}


.page-navigator {
	color:#666;
	margin: 50px 0;
	height: 50px;
	line-height: 50px;
	border-top:1px solid #E0E0E0;
	list-style:none;
	font-size:16px;

	li {
		display:inline-block;
		margin:0 5px 5px 0;
	}

	a {
	  display:inline-block;
		height:49px;
		border-top:1px solid #FFFFFF;
		line-height:50px;

		&:hover {
			border-color: #FF0000;
		}
	}

	.current a {
		color:#444;
		border-top-color:#FF0000;
	}
}
