#header {
	padding: 50px 50px 0;
	text-shadow: 1px 1px 5px $shadow-color;

  +mobile() {
    padding: 20px 20px 0;
  }

  +tablet() {
    padding: 20px 20px 0;
  }
}


/* Logo Section */
#logo {
	font: normal 40px 'Vazir' ,Verdana;
	direction: rtl;
	text-align: right;
	float: right;

	&:hover {
		color: $line-light;
	}
}
.description {
	font-size: 14px;
	display: inline-block;
  margin-right: -200px;
  direction: rtl;
  float: right;
  text-align: right;
  margin-top: 65px;

  +mobile() {
    display: block;
    margin-left: 0;
  }
  
  +tablet() {
    display: block;
    margin-left: 0;
  }
}


/* Menu Section */
#nav-menu {
	width: 100%;
	height: 50px;
	padding-top: 50px;
	border-bottom: 1px solid $line-dark;
	float: right;

  +mobile() {
    height: auto;
    padding-top: 10px;
    border-bottom: none;
  }
  
  +tablet() {
    padding-top: 10px;
  }


  ul, li {
    list-style: none;
    float: right;
    margin: 0;
    padding: 0;

    +mobile() {
      float: none;
    }
  }


  a {
    color: $body-font;
    display: inline-block;
    line-height: 50px;
    margin-right: 30px;
    padding: 0 5px;
    border-color: $line-dark;
    font-size: 16px;

    line-transition();
    transition-property: border-color;

    &:hover {
      border-bottom: 1px solid $line-light;
    }

    +mobile() {
      display: block;
      padding: 0 20px;
      margin-right: 0;
      background: $gray-100;
      border-bottom: 2px solid $gray-50;

      &:hover {
        border-bottom-color: $gray-50;
      }
    }
  }

}


/* Search section */
#search {
	float: left;

  input {
    width: 100px;
    height: 50px;
    padding: 0;
    border: 0;
    outline: none;
    color: $body-font;
    direction: rtl;
    text-align: right;


    &:focus {
      height: 50px;
      border-bottom: 1px solid $line-light;
      padding: 0 10px;
      width: 150px;
    }
  }

  +mobile() {
    display: none;
  }

}
