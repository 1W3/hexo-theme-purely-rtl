#header {
	padding: 50px 50px 0;
	text-shadow: 1px 1px 5px $shadow-color;
}


/* Logo Section */
#logo {
	font: normal 50px 'Electrolize',Verdana;

	&:hover {
		color: $line-light;
	}
}
.description {
	font-size: 14px;
	line-height: 28px;
	margin: 5px 0;
}


/* Menu Section */
#nav-menu {
	width: 100%;
	height: 50px;
	padding-top: 50px;
	border-bottom: 1px solid $line-dark;
	float: left;


  ul, li {
    list-style: none;
    float: left;
    margin: 0;
    padding: 0;
  }


  a {
    color: $body-font;
    display: inline-block;
    line-height: 50px;
    margin-right: 30px;
    padding: 0 40px;
    font-size: 16px;

    &:hover {
      border-bottom: 1px solid $line-light;
    }
  }

}


/* Search section */
#search {
	float: right;

  input {
    width: 100px;
    height: 50px;
    padding: 0;
    border: 0;
    outline: none;
    color: $body-font;


    &:focus {
      height: 50px;
      border-bottom: 1px solid $line-light;
      padding: 0 10px;
      width: 150px;
    }
  }

}
